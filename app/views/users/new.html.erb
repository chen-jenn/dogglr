<div class="mt-4" id="show_page">
    <div class="card ml-3 mb-3 mx-auto rounded" style="width: 40rem;">
      <div class="card-body">
        <h1 class="card-title"><strong>Sign Up</strong></h1>
        <h6 class="card-subtitle mb-2 text-muted">Just sign your life away</h6>
        <hr>

        <%= form_for @user do |f| %>

            <p class="form-errors">
              <%= @user.errors.full_messages.join(', ') %>
            </p>
            <div class="form-group">
              <strong><%= f.label :first_name, for:"input1" %></strong><br />
              <%= f.text_field :first_name, type:"text", class:"form-control", id:"input1" %>
            </div>
            <div class="form-group">
              <strong><%= f.label :last_name, for:"input2" %></strong><br />
              <%= f.text_field :last_name, type:"text", class:"form-control", id:"input2" %>
            </div>
            <div class="form-group">
              <strong><%= f.label :email, for:"input3" %></strong><br />
              <%= f.email_field :email, type:"text", class:"form-control", id:"input3" %>
            </div>
            <div class="form-group">
              <strong><%= f.label :password, for:"input4" %></strong><br />
              <%= f.password_field :password, type:"password", class:"form-control", id:"input4" %>
            </div>
            <div class="form-group">
              <strong><%= f.label :password_confirmation, for:"input5" %></strong><br />
              <%= f.password_field :password_confirmation, type:"password", class:"form-control", id:"input5" %>
            </div>

            <%= f.submit "Submit", class:"btn btn-outline-dark" %>

        <% end %>
      </div>
    </div>
</div>
